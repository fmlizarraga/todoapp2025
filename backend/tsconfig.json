{
  "compilerOptions": {
    "target": "ES2021",                                  
    "module": "CommonJS",                               
    "moduleResolution": "node",                          
    "experimentalDecorators": true,                     
    "emitDecoratorMetadata": true,                      
    "strict": true,                                     
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true,                               
    "outDir": "./dist",                                 
    "rootDir": "./src",                                 
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
